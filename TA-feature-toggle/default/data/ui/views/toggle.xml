<dashboard version="1.1" script="feature_toggle.js" stylesheet="feature_toggle.css">
    <label>Feature Toggle Dashboard</label>
    <description>Dashboard to manage feature toggles in KV store</description>
    <row>
        <panel>
            <html>
                <canvas id="confettiCanvas" style="position: fixed; top: 0; left: 0; height: 100%; width: 100%; pointer-events: none; z-index: 999;"></canvas>
                    <div id="toggle-table-container" class="toggle-table-container">
                    <table id="toggle-table" class="toggle-table">
                        <thead>
                            <tr>
                                <th>usecase_id</th>
                                <th>status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Toggles will be rendered here -->
                        </tbody>
                    </table>
                </div>
                <div id="feedback" class="feedback-panel"></div>
            </html>
        </panel>
    </row>
</dashboard>
